{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Clock Project",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "\"${workspaceFolder}/Source.cpp\"",
        "\"${workspaceFolder}/Project-Module-3.cpp\"",
        "-o",
        "\"${workspaceFolder}/x64/ProjectCS210Clock.exe\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compiles both C++ source files into a single executable."
    }
  ]
}